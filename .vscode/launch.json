{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },  
    {
      "name": "npm start",
      "request": "launch",
      "runtimeArgs": ["start"],
      "runtimeExecutable": "npm",
      "type": "node"
    },
    {
      "name": "npm run build",
      "request": "launch",
      "runtimeArgs": ["run", "build"],
      "runtimeExecutable": "npm",
      "type": "node"
    }
  ]
}
